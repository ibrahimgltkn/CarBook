@model ResultUpdateFeatureDto

@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Araç Özelliği Güncelleme Sayfası</h4>
                    <p class="card-subtitle mb-4">
                        Araç ile ilgili özellikleri aşağıdaki kutucuğa girebilirsiniz.
                    </p>
                    <form method="post">
                        <input type="hidden" asp-for="FeatureID"/>
                        <div class="form-group">
                            <label for="exampleInputFeature">Özellik Adı</label>
                            <input type="text" class="form-control" id="exampleInputFeature" asp-for="Name" placeholder="Özellik Girişi Yapınız..">
                        </div>

                        <button type="submit" class="btn btn-primary waves-effect waves-light">Araç Özelliği Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>