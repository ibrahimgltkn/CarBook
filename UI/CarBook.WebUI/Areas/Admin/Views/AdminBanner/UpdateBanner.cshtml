@model UpdateBannerDto

@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yeni Banner Bilgisi Girişi</h4>
                    <p class="card-subtitle mb-4">
                        Banner alanına veri girşini aşağıdan yapabilirsiniz. Sadece 1 tane banner verisi kalmalıdır.
                    </p>
                    <form method="post">
                        <input type="hidden" asp-for="BannerId" />
                        <div class="form-group">
                            <label for="exampleInputTitle">Başlık</label>
                            <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Başlık Girişi Yapınız..">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputDescription">Açıklama</label>
                            <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Açıklama Girişi Yapınız..">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputVideoDescription">Video Açıklama</label>
                            <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VideoDescription" placeholder="Video Açıklama Girişi Yapınız..">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputVideoUrl">Video URL</label>
                            <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Video'nun Youtube Embed Linkini Giriniz..'">
                        </div>

                        <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>